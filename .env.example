# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/vitaview_db"

# AI API Keys
OPENAI_API_KEY="your_openai_api_key_here"
GOOGLE_API_KEY="your_google_gemini_api_key_here"

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# AWS S3 Configuration (for secure file storage)
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="vitaview-secure-storage"

# Application Configuration
NODE_ENV="development"
PORT=5000

# Session Configuration
SESSION_SECRET="your_session_secret_key_at_least_32_characters_long_and_secure"

# Redis Configuration (optional, for session storage in production)
REDIS_URL="redis://localhost:6379"

# Email Configuration (for password reset, notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_specific_password"
FROM_EMAIL="noreply@vitaview.ai"

# Security Configuration
CORS_ORIGIN="http://localhost:5173"
ALLOWED_ORIGINS="http://localhost:5173,https://yourdomain.com"

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_AI_ANALYSIS=true
ENABLE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Monitoring and Analytics
ANALYTICS_ID="your_google_analytics_id"
SENTRY_DSN="your_sentry_dsn_for_error_tracking"

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
AUTH_RATE_LIMIT=5
API_RATE_LIMIT=200
UPLOAD_RATE_LIMIT=50

# File Upload Limits
MAX_FILE_SIZE="50MB"
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png"

# Cache Configuration
ENABLE_CACHING=true
CACHE_TTL=3600

# Development Only
DEBUG=false
LOG_LEVEL="info"
ENABLE_DEV_TOOLS=false
